{
  "name": "crtx-personal-task-tracker",
  "version": "1.0.0",
  "description": "Personal task tracking with Claude AI integration",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "test": "node tests/focus-mode.test.js && node tests/category-filtering.test.js",
    "test:focus": "node tests/focus-mode.test.js",
    "test:category": "node tests/category-filtering.test.js",
    "test:watch": "nodemon tests/focus-mode.test.js",
    "test:watch:category": "nodemon tests/category-filtering.test.js",
    "test:browser": "open tests/focus-mode-integration.html",
    "test:browser:category": "open tests/category-filtering-integration.html",
    "test:all": "npm run test && npm run test:browser && npm run test:browser:category",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "autoprefixer": "^10.4.21",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^23.0.1",
    "nodemon": "^3.0.2",
    "playwright": "^1.55.0",
    "shadcn": "^3.4.0",
    "tailwindcss": "^3.4.17"
  }
}
